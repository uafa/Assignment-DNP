@using BlazorWASM.Services
@namespace Login
@inject NavigationManager navMgr
@inject IAuthService authService

<AuthorizeView>
    <Authorized>
        <button class="button-17" @onclick="Logout">Log Out</button>
    </Authorized>
    <NotAuthorized>
        <button class="button-17" @onclick="Login">Log In</button>
    </NotAuthorized>

</AuthorizeView>

@code {
    private void Login()
    {
        navMgr.NavigateTo("/Login");
    }
    
    private async Task Logout()
    {
        //TODO
        await authService.LogoutAsync();
        navMgr.NavigateTo("/");
    }
}